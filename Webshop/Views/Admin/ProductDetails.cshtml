@model Webshop.Shared.Models.ViewModel.ProductModels.ProductCategoryViewModel

@{
    ViewData["Title"] = "ProductDetails";
}

<h3>Product Details</h3>

<div class="row">
    <div class="col-4">
        <h4>Details</h4>
        <hr />
        <dl class="row">
            <dd class="col-sm-12">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dd class="col-sm-12">
                @Html.DisplayFor(model => model.Description)
            </dd>
        </dl>
    </div>

    <div class="col-8">
        @Html.ActionLink("Add New Product Item", "AddProductItem", new { categoryId = Model.Id })
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Price</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Edit</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model.ProductItems)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>@item.Price</td>
                        <td>@item.Quantity</td>
                        <td>
                            @Html.ActionLink("Edit", "EditProductItem", new { id = item.Id }) |
                            @Html.ActionLink("Details", "ProductItemDetails", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "DeleteProductItem", new { id = item.Id })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



<div>
    <a asp-action="Categories">Back to List</a>
</div>
